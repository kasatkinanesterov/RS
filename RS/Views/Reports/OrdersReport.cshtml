@model List<RS.Models.OrderReportViewModel>

<h2>Отчёт по заказам</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID Заказа</th>
            <th>Клиент</th>
            <th>Статус</th>
            <th>Сотрудник</th>
            <th>Товары</th>
            <th>Услуги</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.CustomerName</td>
                <td>@order.Status</td>
                <td>@order.EmployeeName</td>
                <td>
                    @if (order.Products.Any())
                    {
                        <ul>
                            @foreach (var product in order.Products)
                            {
                                <li>@product.Name - @product.Quantity шт.</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span>Нет товаров</span>
                    }
                </td>
                <td>
                    @if (order.Services.Any())
                    {
                        <ul>
                            @foreach (var service in order.Services)
                            {
                                <li>@service</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span>Нет услуг</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
