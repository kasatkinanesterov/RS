@model RS.ViewModels.OrderProducts.OrderProductViewModel

<div>
    <h6>Вы действительно хотите удалить товар из заказа?</h6>
    <hr />
    <p><strong>Название товара:</strong> @Model.ProductName</p>
    <p><strong>Цена:</strong> @Model.ProductPrice.ToString("C")</p>
    <p><strong>Статус:</strong> @Model.Status</p>
    <p><strong>Исполнитель:</strong> @Model.ExecutorName</p>
    <p><strong>Дата создания:</strong> @Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</p>
    <p><strong>Дата обновления:</strong> @Model.UpdatedAt.ToString("dd.MM.yyyy HH:mm")</p>
    <p><strong>Срок выполнения:</strong> @Model.Deadline.ToString("dd.MM.yyyy HH:mm")</p>
    <p><strong>Дополнительная информация:</strong> @Model.AdditionalInfo</p>

    <form id="deleteOrderProductForm" method="post" asp-action="DeleteOrderProduct" asp-controller="OrderProducts">
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger">Удалить</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
    </form>
</div>
