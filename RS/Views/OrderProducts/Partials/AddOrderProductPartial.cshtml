@model RS.ViewModels.OrderProducts.OrderProductEditViewModel

<form id="addOrderProductDetailsForm" method="post" asp-action="AddOrderProductDetails" asp-controller="OrderProducts">
    <h6>Добавить товар в заказ</h6>
    <input type="hidden" asp-for="OrderId" />
    <input type="hidden" asp-for="ProductId" />

    <div class="form-group">
        <label for="ExecutorId">Исполнитель</label>
        <select asp-for="ExecutorId" asp-items="ViewBag.Executors" class="form-control">
            <option value="">-- Выберите исполнителя --</option>
        </select>
        <span asp-validation-for="ExecutorId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Status">Статус</label>
        <select asp-for="Status" class="form-control" asp-items="@(new SelectList(RS.ViewModels.OrderProducts.OrderProductEditViewModel.AvailableStatuses))"></select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="AdditionalInfo">Дополнительная информация</label>
        <textarea asp-for="AdditionalInfo" class="form-control"></textarea>
        <span asp-validation-for="AdditionalInfo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Deadline">Срок выполнения</label>
        <input asp-for="Deadline" class="form-control" type="date" />
        <span asp-validation-for="Deadline" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>
