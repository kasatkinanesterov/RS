@model RS.ViewModels.Orders.CreateOrderViewModel

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="CustomerName">Имя клиента</label>
        <input type="text" asp-for="CustomerName" class="form-control" />
        <span asp-validation-for="CustomerName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="CustomerEmail">Email клиента</label>
        <input type="email" asp-for="CustomerEmail" class="form-control" />
        <span asp-validation-for="CustomerEmail" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="CustomerPhone">Телефон клиента</label>
        <input type="text" asp-for="CustomerPhone" class="form-control" />
        <span asp-validation-for="CustomerPhone" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="OrderStatus">Статус заказа</label>
        <select asp-for="OrderStatus" class="form-control" asp-items="@(new SelectList(RS.ViewModels.Orders.CreateOrderViewModel.AvailableStatuses))"></select>
        <span asp-validation-for="OrderStatus" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label for="EmployeeId">Сотрудник</label>
        <input type="text" class="form-control" value="@Model.Employees.FirstOrDefault(e => e.Value == Model.EmployeeId)?.Text" readonly />
        <input type="hidden" asp-for="EmployeeId" /> <!-- Скрытое поле для отправки значения -->
    </div>


    <button type="submit" class="btn btn-primary">Создать заказ</button>
</form>
